doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title FOREVER
    link(rel="icon" href="./image/favicon.jpg")
    link(rel="stylesheet", href="./style.css")
    link(rel="stylesheet", href="fontawesome-free-5.13.0-web/css/all.min.css")
  body
    header
      nav
        .container
          .row
            a.logo(href="#")
              strong g
              i.fas.fa-heart
              strong d
            #nav__menu
              - const arryNav = [ "home", "about", "gallery", "the story", "the wedding", "blog", "page", "rsvp"]
              ul
                for n in arryNav
                  li
                    a=n
                    i.fas.fa-heart
        #slide
          .slide__slidy
            img(alt="slide" src="./image/slide-image-1920-c.jpg")
            img(alt="slide" src="./image/slide-image-1920-d.jpg")
            img(alt="slide" src="./image/slide-image-1920-f.jpg")
          - const arrH1 = ["save", "the date", "- 27 . 11 . 98 -"]
          .slide__content
            for n in arrH1
              h1=n
            h2 *** we are getting married ***
            .slide__content__icon
              span
              i.fas.fa-heart
              i.fas.fa-heart
              span
    main
      section#couple
        .container
          .row
            .title
              h1 the happy couple
              p.title__blurb Lorem ipsum dolor sit amet, consectetur adipiscing elit. Integer ultrices malesuada ante quis pharetra. Nullam non bibendum dolor. Ut vel turpis accumsan, efficitur dolor fermentum, tincidunt metus.
              .title__icon
                span
                i.fas.fa-heart
                i.fas.fa-heart
                span
          .row
            .photo
              img(title="photo" src="./image/him2.jpg")
              .photo__layout
                a(href="#" type="button") about him
                .photo__layout__icon
                  i.fas.fa-heart
                  i.fas.fa-heart
                h4 *** the groom ***

            .photo
              img(title="photo" src="./image/her2.jpg")
              .photo__layout
                a(href="#" type="button") about her
                .photo__layout__icon
                  i.fas.fa-heart
                  i.fas.fa-heart
                h4 *** the bride ***